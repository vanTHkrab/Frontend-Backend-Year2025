<%- include('../partials/head') %>

<section class="space-y-4">
  <h1 class="text-2xl font-bold">เพิ่มสินค้า</h1>

  <% if (error) { %>
    <div class="text-red-600"><%= error %></div>
  <% } %>

  <form method="post" action="/products" class="space-y-3 max-w-md">
    <input class="border rounded px-3 py-2 w-full" name="id" placeholder="รหัสสินค้า" value="<%= form.id || '' %>" required />
    <input class="border rounded px-3 py-2 w-full" name="name" placeholder="ชื่อสินค้า" value="<%= form.name || '' %>" required />
    <input class="border rounded px-3 py-2 w-full" type="number" step="0.01" min="0" name="price" placeholder="ราคา" value="<%= form.price || '' %>" required />
    <input class="border rounded px-3 py-2 w-full" name="category" placeholder="หมวดหมู่" value="<%= form.category || '' %>" />
    <input class="border rounded px-3 py-2 w-full" name="imageUrl" placeholder="รูปภาพ URL" value="<%= form.imageUrl || '' %>" />
    <textarea class="border rounded px-3 py-2 w-full" name="description" placeholder="รายละเอียด" rows="4"><%= form.description || '' %></textarea>

    <button class="px-4 py-2 bg-green-600 text-white rounded">บันทึก</button>
  </form>
</section>

<%- include('../partials/foot') %>